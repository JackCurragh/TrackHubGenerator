// Basic Nextflow configuration
nextflow.enable.dsl = 2

// Default parameters
params {
    // Input/output parameters
    input = null
    outdir = "results"
    hub_name = "Translon TrackHub"
    email = "jackt@ebi.ac.uk"

    sample_regex = ""
    annotation_regex = ""
    // Resource parameters
    max_cpus = 16
    max_memory = '128.GB'
    max_time = '240.h'
    
    // Other common parameters
    help = false
    version = false
}

// Global process configuration
process {
    // Default resource allocation
    cpus = 1
    memory = 1.GB
    time = 1.h
    
    // Error handling
    errorStrategy = 'retry'
    maxRetries = 2
    
    // Resource limits
    resourceLimits = [
        memory: params.max_memory,
        cpus: params.max_cpus,
        time: params.max_time
    ]
}

// Execution reports
timeline {
    enabled = true
    overwrite = true
    file = "${params.outdir}/pipeline_info/execution_timeline.html"
}

report {
    enabled = true
    overwrite = true
    file = "${params.outdir}/pipeline_info/execution_report.html"
}

trace {
    enabled = true
    overwrite = true
    file = "${params.outdir}/pipeline_info/execution_trace.txt"
}

dag {
    enabled = true
    overwrite = true
    file = "${params.outdir}/pipeline_info/pipeline_dag.svg"
}

// Capture exit codes from upstream processes when piping
process.shell = ['/bin/bash', '-euo', 'pipefail']

// Profiles for different execution environments
profiles {
    
    // Docker profile
    docker {
        docker.enabled = true
        docker.userEmulation = true
        singularity.enabled = false
        conda.enabled = false
        
        process {
            executor = 'local'
        }
    }
    
    // Singularity profile
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
        docker.enabled = false
        conda.enabled = false
        
        process {
            executor = 'local'
        }
    }
    
    // Conda profile
    conda {
        conda.enabled = true
        conda.useMamba = true
        conda.channels = ['conda-forge', 'bioconda', 'defaults']
        docker.enabled = false
        singularity.enabled = false
        
        process {
            executor = 'local'
        }
    }
    
    // Local development profile
    local {
        process {
            executor = 'local'
            cpus = 2
            memory = 8.GB
        }
    }
    
    // HPC SLURM profile
    slurm {
        process {
            executor = 'slurm'
            queue = 'compute'
            clusterOptions = '--account=myaccount'
        }
        
        executor {
            queueSize = 50
            submitRateLimit = '10 sec'
        }
    }
    
    // Test profile with minimal resources
    test {
        params {
            max_cpus = 2
            max_memory = '6.GB'
            max_time = '6.h'
        }
        
        process {
            cpus = 1
            memory = 2.GB
            time = 30.min
        }
    }
    
    // Debug profile
    debug {
        process.beforeScript = 'echo $HOSTNAME'
        cleanup = false
    }
}

// Manifest information
manifest {
    name = 'my-pipeline'
    author = 'Your Name'
    homePage = 'https://github.com/yourusername/my-pipeline'
    description = 'Description of your pipeline'
    mainScript = 'main.nf'
    nextflowVersion = '>=23.04.0'
    version = '1.0.0'
}